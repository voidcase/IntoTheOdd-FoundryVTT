<section class="tab actor-{{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
  <div class="items-list">
    {{#each actor.items as |item id|}}
      {{log "item" id item}}
      <div class="item" data-item-id="{{item.id}}">
        <details>
          <summary>
            <span>
              <span class="item-name">
                {{item.name}}
                {{#if item.system.hasQuantity}}
                  ({{item.system.quantity}})
                {{/if}}
              </span>
              {{#if item.system.isArmor}}
                <span class="item-info">Armour {{item.system.armour}}</span>
              {{/if}}
              {{#if item.system.hasDamage}}
                <span class="item-info">{{item.system.damageFormula}} damage</span>
              {{/if}}
              {{#if item.system.isBulky}}
                <span class="item-info">{{localize "INTOTHEODD.Item.FIELDS.bulky.label"}}</span>
              {{/if}}
              {{#if item.system.isArcana}}
                <span class="item-info">{{localize "INTOTHEODD.Item.FIELDS.arcana.label"}}</span>
              {{/if}}              
              {{#if item.system.isEquipped}}
                <span class="item-info">{{localize "INTOTHEODD.Item.FIELDS.equipped.label"}}</span>
              {{/if}}
            </span>
          </summary>
          <div class="item-description">{{{item.system.description}}}</div>
        </details>
        <div class="item-controls">
          {{#if item.system.isEquipped}}
            {{#if item.system.hasDamage}}
              <span class="rollable" data-label="damage with {{item.name}}" data-roll="{{item.system.damageFormula}}" data-tooltip="{{localize 'INTOTHEODD.RollDamage'}}">
                <i class="fas fa-dice-d20"></i>
              </span>
            {{/if}}
            <a data-tooltip="{{localize 'INTOTHEODD.Unequip'}}" data-action="unequip" data-item-id="{{item.id}}"><i class="fa-solid fa-shield"></i></a>
          {{/if}}
          {{#if (not item.system.isEquipped)}}
            <a data-tooltip="{{localize 'INTOTHEODD.Equip'}}" data-action="equip" data-item-id="{{item.id}}"><i class="fa-regular fa-shield"></i></a>
          {{/if}}
          <a data-tooltip="{{localize 'INTOTHEODD.Edit'}}" data-action="edit" data-item-id="{{item.id}}"><i class="fas fa-edit"></i></a>
          <a data-tooltip="{{localize 'INTOTHEODD.Delete'}}" data-action="delete" data-item-id="{{item.id}}"><i class="fas fa-trash"></i></a>
        </div>
      </div>
    {{/each}}
  </div>
</section>