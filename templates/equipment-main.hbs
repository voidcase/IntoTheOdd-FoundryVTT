<div class="standard-form equipment">
  {{!log "equipment-sheet" this}}
  <section class="item-main">
    <div class="header">
      <img src="{{item.img}}" data-edit="img" data-action='editImage' data-tooltip="{{item.name}}" />
      {{formInput fields.name value=source.name }}
    </div>
    <div class="details">
      <fieldset>
        <legend>{{localize "INTOTHEODD.Labels.details"}}</legend>
        {{formField systemFields.subType value=system.subType localize=true }}
        {{formField systemFields.quantity value=system.quantity }}
        {{formField systemFields.arcana value=system.arcana }}
        {{formField systemFields.bulky value=system.bulky }}
        {{formField systemFields.equipped value=system.equipped }}
      </fieldset>
    </div>
  </section>

  {{#if (eq item.system.subType "armour")}}
    <section class="item-armour">
      <fieldset>
        <legend>{{localize "INTOTHEODD.Equipment.SubType.armour"}}</legend>
        {{formField systemFields.armour value=system.armour localize=true }}
      </fieldset>
    </section>
  {{/if}}

  {{#if (eq item.system.subType "weapon")}}
    <section class="item-weapon">
      <fieldset>
        <legend>{{localize "INTOTHEODD.Equipment.SubType.weapon"}}</legend>
        {{formField systemFields.damageFormula value=system.damageFormula }}
        {{formField systemFields.blast value=system.blast }}
      </fieldset>
    </section>
  {{/if}}

  <section class="item-description">
    <fieldset>
      <legend>{{localize "INTOTHEODD.Equipment.FIELDS.description.label"}}</legend>
      {{formInput
        systemFields.description
        enriched=enrichedDescription
        value=system.description
        documentUUID=item.uuid
        name="system.description"
        collaborate="false"
        toggled="true"
        height="50"
      }}
    </fieldset>
  </section>
</div>